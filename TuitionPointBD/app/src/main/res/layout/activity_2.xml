<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dipu.tuitionpointbd.Activity2">


    <EditText
        android:id="@+id/etLoginUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="User ID" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etRegisterUserID"
        android:layout_alignStart="@+id/etRegisterUserID"
        android:layout_below="@+id/etRegisterUserID"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Password" />

    <Button
        android:id="@+id/MainLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etLoginPassword"
        android:layout_alignRight="@+id/etLoginPassword"
        android:layout_below="@+id/etLoginPassword"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="25dp"
        android:text="Log In" />
</RelativeLayout>
